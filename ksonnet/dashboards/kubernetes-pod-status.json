              "namespace": 0,
              "pod": 1,
              "node": 2,
              "phase": 3,
              "Value #C": 4,
              "Value #D": 5
            },
            "renameByName": {
              "Value #C": "Ready",
              "Value #D": "Restarts",
              "namespace": "Namespace",
              "node": "Node",
              "phase": "Status",
              "pod": "Pod"
            }
          }
        }
      ],
      "type": "table"
