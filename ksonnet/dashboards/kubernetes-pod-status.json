          "instant": true,
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "kube_pod_status_phase{namespace=~\"$namespace\", pod=~\"$pod\", phase=~\"Running|Pending|Failed|Succeeded|Unknown\"} == 1",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "kube_pod_status_ready{namespace=~\"$namespace\", pod=~\"$pod\", condition=\"true\"} == 1",
          "format": "table",
          "instant": true,
          "refId": "C"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum by (namespace, pod) (kube_pod_container_status_restarts_total{namespace=~\"$namespace\", pod=~\"$pod\"})",
          "format": "table",
          "instant": true,
          "refId": "D"
        }
      ],
